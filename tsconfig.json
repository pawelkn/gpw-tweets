{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "build",
        "declaration": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "mocha"
        ],
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "idea",
        "test",
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}